<?xml version="1.0" encoding="utf-8"?>
<Defs>

	<ThingDef ParentName="BuildingBase" Name="NanoShieldBase" Abstract="True">
		<category>Building</category>
		<altitudeLayer>Building</altitudeLayer>
		<leaveResourcesWhenKilled>true</leaveResourcesWhenKilled>
		<blockLight>true</blockLight>
		<drawerType>MapMeshAndRealTime</drawerType>
		<staticSunShadowHeight>1.0</staticSunShadowHeight>
		<fillPercent>1</fillPercent>
		<size>(1,1)</size>
		<rotatable>false</rotatable>
		<terrainAffordanceNeeded>Light</terrainAffordanceNeeded>
		<designationCategory>Security</designationCategory>
		<holdsRoof>false</holdsRoof>
		<specialDisplayRadius>8</specialDisplayRadius>
		<statBases>
			<MaxHitPoints>500</MaxHitPoints>
			<WorkToMake>2000</WorkToMake>
			<Flammability>1.0</Flammability>
			<Beauty>-2</Beauty>
			<Mass>50</Mass>
		</statBases>
    <thingCategories>
      <li>Furniture</li>
    </thingCategories>
		<costList>
			<Steel>100</Steel>
			<Silver>500</Silver>
		</costList>
		<passability>Impassable</passability>
		<selectable>true</selectable>
		<tickerType>Normal</tickerType>
	</ThingDef>


	<ThingDef ParentName="NanoShieldBase">
		<defName>Building_Shield_Charger</defName>
		<label>Quantum Shield Charging Station</label>
		<description>Adds and Recharges Quantum Shields on Colonists and Pets. Pulls from a Global Quantum Charge.</description>
		<thingClass>EnhancedDevelopment.Excalibur.NanoShields.Building_NanoShieldCharger</thingClass>
		<researchPrerequisites>
			<li>Personal_Quantum_Shield_Research</li>
		</researchPrerequisites>
		<graphicData>
			<texPath>Things/ShieldBuilding_Red</texPath>
			<graphicClass>Graphic_Single</graphicClass>
			<drawSize>(1,1)</drawSize>
		</graphicData>
		<uiIconPath>Things/ShieldBuilding_Red</uiIconPath>
		<specialDisplayRadius>5</specialDisplayRadius>
		<minifiedDef>MinifiedThing</minifiedDef>
		<comps>
			<li Class="CompProperties_Power">
				<compClass>CompPowerTrader</compClass>
				<basePowerConsumption>1000</basePowerConsumption>
			</li>
			<li Class="CompProperties_Flickable"/>
			<li Class="CompProperties_Breakdownable"/>
		</comps>
	</ThingDef>

</Defs>