<?xml version="1.0" encoding="utf-8"?>
<Defs>

	<ThingDef ParentName="EDSN_BuildingBase">
		<defName>Building_EDSN_Transponder</defName>
		<label>EDSN Transponder</label>
		<description>Provides the ability to communicate with the E.D.S.N. Excalibur.</description>
		<thingClass>Building_WorkTable</thingClass>
		<researchPrerequisites>
			<li>Research_ED_Excalibur_Quest_Unlock</li>
			<li>Research_ED_Excalibur_AnalyseStrangeSignal</li>
		</researchPrerequisites>
		<graphicData>
			<texPath>Things/ShieldBuilding_Red</texPath>
			<graphicClass>Graphic_Single</graphicClass>
			<drawSize>(1,1)</drawSize>
		</graphicData>		
		<drawerType>MapMeshAndRealTime</drawerType>
		<designationCategory>Security</designationCategory>
		<uiIconPath>Things/ShieldBuilding_Red</uiIconPath>
		<specialDisplayRadius>5</specialDisplayRadius>
		<hasInteractionCell>True</hasInteractionCell>
		<interactionCellOffset>(0,0,-1)</interactionCellOffset>
		<comps>
			<li Class="CompProperties_Power">
				<compClass>CompPowerTrader</compClass>
				<basePowerConsumption>1000</basePowerConsumption>
			</li>
			<li Class="EnhancedDevelopment.Excalibur.Fabrication.CompProperties_Fabricated">
				<RequiredPower>500</RequiredPower>
				<RequiredMaterials>200</RequiredMaterials>
				<RequiredWork>90</RequiredWork>
			</li>
			<li Class="CompProperties_Flickable"/>
			<li Class="CompProperties_Breakdownable"/>
			<li Class="EnhancedDevelopment.Excalibur.Quest.CompProperties_EDSNTransponder"/>
			<li Class="EnhancedDevelopment.Excalibur.Transporter.CompProperties_Transporter"/>
		</comps>
		<costList>
		</costList>
		<inspectorTabs>
			<li>EnhancedDevelopment.Excalibur.Quest.ITab_Transponder</li>
			<li>EnhancedDevelopment.Excalibur.Quest.ITab_Fabrication</li>
			<li>ITab_Bills</li>
		</inspectorTabs>
		<recipes>
			<li>TransportResourceUnit_Steel</li>
			<li>TransportResourceUnit_OmniGel</li>
		</recipes>
		<statBases>
			<MaxHitPoints>500</MaxHitPoints>
			<WorkToMake>0</WorkToMake>
			<Flammability>1.0</Flammability>
			<Beauty>-2</Beauty>
			<Mass>50</Mass>
		</statBases>
	</ThingDef>

</Defs>