<?xml version="1.0" encoding="utf-8" ?>
<Defs>

	<!-- =========== bases =========== -->

	<ThingDef Name="ResourceBase" Abstract="True">
		<thingClass>ThingWithComps</thingClass>
		<label>unspecified resource</label>
		<category>Item</category>
		<resourceReadoutPriority>Middle</resourceReadoutPriority>
		<useHitPoints>true</useHitPoints>
		<selectable>true</selectable>
		<altitudeLayer>Item</altitudeLayer>
		<stackLimit>75</stackLimit>
		<comps>
			<li>
				<compClass>CompForbiddable</compClass>
			</li>
		</comps>
		<alwaysHaulable>true</alwaysHaulable>
		<drawGUIOverlay>true</drawGUIOverlay>
		<rotatable>false</rotatable>
		<pathCost>15</pathCost>
	</ThingDef>

	<ThingDef ParentName="ResourceBase">
		<defName>OmniGel</defName>
		<label>Omni Gel</label>
		<description>For refining into things.</description>
		<graphicData>
			<texPath>Things/Items/PurpleBucket</texPath>
			<graphicClass>Graphic_Single</graphicClass>
		</graphicData>
		<statBases>
			<MaxHitPoints>60</MaxHitPoints>
			<MarketValue>50</MarketValue>
			<Mass>0.5</Mass>
			<Flammability>0.7</Flammability>
			<DeteriorationRate>2.0</DeteriorationRate>
		</statBases>
		<soundInteract>Metal_Drop</soundInteract>
		<soundDrop>Metal_Drop</soundDrop>
		<stackLimit>500</stackLimit>
		<thingCategories>
			<li>ResourcesRaw</li>
		</thingCategories>
	</ThingDef>

	<ThingDef ParentName="ResourceBase">
		<thingClass>EnhancedDevelopment.Excalibur.Fabrication.ResourceUnit</thingClass>
		<defName>ResourceUnit</defName>
		<label>Resource Unit</label>
		<description>Materials packaged for imediate Transport to on EDSN Starships and Facilities, used in Fabrication.</description>
		<graphicData>
			<texPath>Things/Items/PurpleBucket</texPath>
			<graphicClass>Graphic_Single</graphicClass>
		</graphicData>
		<tickerType>Long</tickerType>
		<statBases>
			<MaxHitPoints>60</MaxHitPoints>
			<MarketValue>50</MarketValue>
			<Mass>0.5</Mass>
			<Flammability>0.7</Flammability>
			<DeteriorationRate>2.0</DeteriorationRate>
		</statBases>
		<soundInteract>Metal_Drop</soundInteract>
		<soundDrop>Metal_Drop</soundDrop>
		<stackLimit>500</stackLimit>
		<thingCategories>
			<li>ResourcesRaw</li>
		</thingCategories>
	</ThingDef>


</Defs>
